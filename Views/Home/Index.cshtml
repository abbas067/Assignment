@model TblAdhaarDetail

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form enctype="multipart/form-data" asp-controller="home" asp-action="create" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Dob" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Dob" class="form-control" placeholder="Dob">
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="City" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="City" class="form-control" placeholder="City">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="State" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="State" class="form-control" placeholder="State">
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Pincode" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Pincode" class="form-control" placeholder="Pincode">
                <span asp-validation-for="Pincode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="MobileNo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="MobileNo" class="form-control" placeholder="MobileNo">
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">

                <input asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PanNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PanNumber" class="form-control" placeholder="PanNumber">
                <span asp-validation-for="PanNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PanDoc" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">

                <div class="custom-file">
                    <input asp-for="PanDoc" class="form-control custom-file-input">
                    <label class="custom-file-label">Choose File......</label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="AdhaarNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="AdhaarNumber" class="form-control" placeholder="Name">
                <span asp-validation-for="AdhaarNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="PhotoFront" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">

                <div class="custom-file">
                    <input asp-for="PhotoFront" class="form-control custom-file-input">
                    <label class="custom-file-label">Choose File......</label>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="PhotoBack" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">

                <div class="custom-file">
                    <input asp-for="PhotoBack" class="form-control custom-file-input">
                    <label class="custom-file-label">Choose File......</label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Gender" class="form-control" placeholder="Gender">
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>

        <div asp asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>

        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }
    </form>
</div>
